{
  "manifest_version": 3,
  "name": "AI Blog Title Generator",
  "version": "1.0",
  "description": "Generate AI-powered blog titles using your own secure server.",
  "action": {
    "default_popup": "extension/popup.html",
    "default_icon": "extension/icon.svg"
  },
  "permissions": [
    "clipboardWrite"
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "icons": {
    "16": "extension/icon.svg",
    "48": "extension/icon.svg",
    "128": "extension/icon.svg"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
